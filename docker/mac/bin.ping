#include <tunables/global>
profile ping /{,usr}/bin/ping {
  #include <abstractions/base>
  #include <abstractions/consoles>
  #include <abstractions/nameservice>

  deny capability net_raw,
  capability setuid,
  network inet raw,
  network inet6 raw,

  /{,usr}/bin/ping mixr,
  /etc/modules.conf r,

}